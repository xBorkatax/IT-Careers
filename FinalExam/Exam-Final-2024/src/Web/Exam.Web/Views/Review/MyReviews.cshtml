@using Exam.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@model List<Exam.Web.Models.ReviewViewModel>

<h2 class="text-center">My Reviews</h2>


@if (!Model.Any())
{
    <h3 class="text-center">You have no Reviews!</h3>
}
else
{
    <div class="container">
        <div class="row mb-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col ">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.Name</td>
                            <td>@review.Description</td>
                            <td>
                                <a asp-controller="Review" asp-action="Locate" asp-route-barberId="@review.BarberId" class="btn btn-secondary mb-2">Locate</a>
                                <a asp-controller="Review" asp-action="DeleteInMyReviews" asp-route-reviewId="@review.Id" class="btn btn-danger mb-2">Delete Review</a>
                                <a asp-controller="Review" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-secondary mb-2">Edit Review</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
}