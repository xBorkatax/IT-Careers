@model Exam.Web.Models.ReviewFormModel

@{
    ViewData["Title"] = "Create Review";
}

<h2 class="text-center">Create Review</h2>

<form asp-controller="Review" asp-action="CreateReview" method="post" class="needs-validation" novalidate>
    <input asp-for="BarberId" type="hidden" value="@ViewBag.BarberId" />
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>