@model Exam.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="w-50 m-auto">
	<div class="border-form">
		<span class="register-title">Login</span>

		<form class="register-login-form m-auto" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="mb-3">
				<label asp-for="UserName" class="mb-1">Username</label>
				<br />
				<input asp-for="UserName" class="border-form" autocomplete="username" aria-required="true" />
				<br />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Password" class="mb-1">Password</label>
				<br />
				<input asp-for="Password" class="border-form" autocomplete="current-password" aria-required="true" />
				<br />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mb-3 d-flex justify-content-center">
				<button id="login-submit" class="border-form bg-white" type="submit">Login</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
