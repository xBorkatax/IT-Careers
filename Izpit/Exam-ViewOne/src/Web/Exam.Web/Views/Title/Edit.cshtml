@model TitleEditModel

@{
    ViewData["Title"] = "Edit Title";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>
    @if (Model.ImageUrl != null)
    {
        <div class="form-group">
            <label>Current Image</label>
            <div>
                <img src="https://localhost:7212/@Model.ImageUrl" alt="Current Image" style="max-width: 200px; max-height: 200px;" />
            </div>
        </div>
    }
    <div class="mb-3 row">
        <label asp-for="CreatedBy" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CreatedBy.UserName" disabled class="form-control">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
