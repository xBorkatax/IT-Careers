@model Exam.Web.Models.TitleViewModel

@{
    ViewData["Title"] = "Title Comments";
}

<h2 class="text-center">Title Details</h2>
<hr />

<div class="container text-center">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Author</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Description</td>
                    <td>@Model.CreatedBy</td>
                </tr>
            </tbody>
        </table>
        <img src="https://localhost:7212/@Model.ImageUrl" width="200px"  alt="Image">
        <h5>Comments</h5>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Author</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in ViewBag.Comments)
                {
                    <tr>
                        <td>@comment.Id</td>
                        <td>@comment.Name</td>
                        <td>@comment.Description</td>
                        <td>@comment.CreatedBy</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Comment" asp-action="CreateComment" asp-route-titleId="@Model.Id" class="btn btn-secondary mb-2">Create Comment</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
}