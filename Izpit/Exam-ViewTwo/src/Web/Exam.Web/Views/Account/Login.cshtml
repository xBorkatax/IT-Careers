@model Exam.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="w-50 m-auto">
		<form class="register-login-form m-auto" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="mb-3">
			<input asp-for="UserName" class="font border login-text border-light-subtle fs-6 p-2 rounded-0" autocomplete="username" aria-required="true" placeholder="Username" />
				<br />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="mb-3">
			<input asp-for="Password" class="font border login-text border-light-subtle fs-6 p-2 rounded-0" autocomplete="current-password" aria-required="true" placeholder="Password" />
				<br />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mb-3 d-flex justify-content-center">
			<button id="login-submit" class="font border submit-button border-light-subtle p-2 fs-6 rounded-0 w-100" type="submit">LOGIN</button>
			</div>
		</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
